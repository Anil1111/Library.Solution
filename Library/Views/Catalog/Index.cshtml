@{
  Layout = "_Layout";
}
@using Library.Models;

<div class="container">

<div class="row">
    <div class="col-md-4">
      <h2>Add A book with an Author</h2>
      <form class='form-group' action="/addCatalog" method="post">

        <label for='title'>Book Title</label>
        <input name='title' type='text' required><br>

        <label for='name'>Author Name</label>
        <input name='name' type='text' required><br>

        <button type='submit' class='btn btn-success'>Add</button>
      </form>
    </div>

    <a href="/">Return Home</a><br>
    <a href="/books"> View Books</a><br>
    <a href="/authors"> View Authors</a>
</div>

<h1>Catalog</h1>

<div class="col-md-8">
  <h2>Catalog</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Book</th>
        <th scope="col">Author</th>
      </tr>
    </thead>
    <tbody>
      @foreach(Catalog entry in Catalog.GetAll())
      {
        <tr>
          <td>@Book.Find(@entry.Book_Id).Title | <a href = "/@entry.Book_Id/addAuthor"> Add another author</a></td>
          <td>@Author.Find(@entry.Author_Id).Name</td>
        </tr>
      }
      <tr>
      </tbody>
    </table>

  </div>
</div>

</div>
